{
  "name": "ROS2 Jazzy Articubot Devcontainer",
  "dockerComposeFile": "../docker-compose.yaml",
  "service": "dev",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",  // stop containers on closing
  "customizations": {
    "vscode": {
      "extensions": [
            "ms-vscode.cpptools",
            "ms-vscode.cmake-tools",
            "ms-python.python"
        ]
    }
  },
  // Mount local SSH agent socket if available (optional, for another way to use host SSH)
  // "mounts": [
  //     "source=${env:SSH_AUTH_SOCK},target=/tmp/ssh-agent.sock,type=bind"
  // ],
  // "remoteEnv": {
  //     "SSH_AUTH_SOCK": "/tmp/ssh-agent.sock"
  // },
  "settings": {
      // Optional: ROS/C++ settings for the container (if using VSCode ROS extensions, etc.)
      //"ros.distro": "jazzy"
  },
  "runArgs": [
    "--gpus", "all"
  ]
}
